{
  "name": "cbl-alloui",
  "version": "1.0.0",
  "description": "CBL_alloui - Basketball Coaching Level I web application with 12 interactive learning modules",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8411",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start -p 8080",
    "lint": "next lint",
    "test": "jest",
    "performance:audit": "npx lighthouse http://localhost:8080 --output=json --output=html --output-path=./performance-audit",
    "performance:analyze": "npm run build:analyze && npx serve out",
    "db:backup": "node scripts/firestore-backup.js --action=backup --type=full",
    "db:backup:incremental": "node scripts/firestore-backup.js --action=backup --type=incremental",
    "db:restore": "node scripts/firestore-backup.js --action=restore",
    "db:list": "node scripts/firestore-backup.js --action=list",
    "db:schedule": "node scripts/firestore-backup.js --action=schedule",
    "db:migrate": "node scripts/data-migration.js --action=migrate",
    "db:seed": "node scripts/data-migration.js --action=seed --environment=development",
    "db:validate": "node scripts/data-migration.js --action=validate",
    "db:export": "node scripts/data-migration.js --action=export",
    "db:import": "node scripts/data-migration.js --action=import",
    "monitor:setup": "node scripts/performance-monitoring.js --action=setup",
    "monitor:start": "node scripts/performance-monitoring.js --action=monitor",
    "monitor:report": "node scripts/performance-monitoring.js --action=report",
    "disaster:check": "./scripts/disaster-recovery.sh check",
    "disaster:backup": "./scripts/disaster-recovery.sh backup",
    "disaster:restore": "./scripts/disaster-recovery.sh restore",
    "disaster:test": "./scripts/disaster-recovery.sh test",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes"
  },
  "dependencies": {
    "@google-cloud/datastore": "^10.0.1",
    "@google-cloud/error-reporting": "^3.0.5",
    "@google-cloud/storage": "^6.11.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "firebase": "^9.22.0",
    "formidable": "^2.1.1",
    "framer-motion": "^10.12.16",
    "isomorphic-dompurify": "^2.26.0",
    "jspdf": "^3.0.2",
    "next": "^13.4.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.44.2",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "sharp": "^0.34.3",
    "swagger-ui-react": "^5.28.1",
    "swr": "^2.1.5",
    "uuid": "^9.0.0",
    "web-vitals": "^5.1.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@google-cloud/monitoring": "^4.1.0",
    "@sentry/nextjs": "^10.9.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "autoprefixer": "^10.4.14",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "eslint": "^8.42.0",
    "eslint-config-next": "^13.4.3",
    "firebase-admin": "^12.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "logrocket": "^10.1.0",
    "node-cron": "^3.0.3",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "yargs": "^17.7.2"
  }
}
